{
  "name": "@nearweek/mcp-server",
  "version": "1.0.0",
  "description": "MCP server providing access to NEAR blockchain data",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "near-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:http": "node dist/index.js --http",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "near",
    "blockchain",
    "mcp",
    "model-context-protocol"
  ],
  "author": "Oleh Ivaniuk",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@near-js/accounts": "^2.1.0",
    "@near-js/providers": "^2.0.4",
    "@near-js/types": "^2.0.3",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "near-api-js": "^5.0.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "typescript": "^5.7.3"
  }
}
